.overlay-container {
    position: relative;
}
.overlay-content {
    position: absolute;
    top: 400px;
    left: 240px;
}
.overlay-content .header {
    font-size: 80px;
}
.overlay-content .body {
    font-size: 40px;
}
.overlay-content button {
    background: white;
    border: none;
    border-radius: 15px;
    font-size: 20px;
}
.overlay-content button a{
    margin: 20px;
    line-height: 47px;
    color: black;
    text-decoration: none;
    outline: none;
}